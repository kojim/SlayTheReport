<html>

<head>
  <title>SlayTheReport</title>
  <link rel="stylesheet" href="/style.css" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script>
    $(function(){
      $('.delete_report').click(function(e) {
        ret = window.prompt('本当に削除してよろしいですか？よろしければ「削除」と入力してください', '');
        return ret == '削除';
      });
    });
  </script>
<body>

<div class='header'>
  <header class='title'>SlayTheReport</header>
  <header class='menu'>
    <ul class='pages'>
      <li><a href='/'>トップページ</a></li>
      <li class='current'>マイページ</li>
      <li><a href="/help">ヘルプ</a></li>
    </ul>
  </header>
</div>

<ul>
  <li>
    <form action='/mypage/newreport' method="post" enctype="multipart/form-data">
      <input type="file" name="runfile", accept=".run">
      <button type="submit">upload</button>
    </form>
  </li>
  <li>
    <h3>my reports</h3>
    <ul>
      <% @reports.each do |r| %>
        <li>
          <a href="/report/<%= r.author %>/<%= r.run_id %>"> <%= h(r.title) %> / <%= r.run_id %></a> / 
          <a href="/mypage/edit/<%=r.run_id%>">edit</a>
          <form method='POST' action='/mypage/delete/<%=r.run_id%>'>
            <button type='submit'  class='delete_report'>削除</button>
          </form>
        </li>
      <% end %>
    </ul>
  </li>
</ul>
</body>
</html>
