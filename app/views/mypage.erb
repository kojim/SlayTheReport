<h1>SlayTheReport</h1>
<h2>mypage</h2>

<ul>
  <li>
    <h3>links</h3>
    <ul>
      <li><a href="/">top page</a></li>
    </ul>
  </li>
  <li>
    <form action='/mypage/newreport' method="post" enctype="multipart/form-data">
      <input type="file" name="runfile", accept=".run">
      <button type="submit">upload</button>
    </form>
  </li>
  <li>
    <h3>my reports</h3>
    <ul>
      <% @reports.each do |r| %>
        <li>
          <a href="/report/<%= r.author %>/<%= r.run_id %>"> <%= h(r.title) %> / <%= r.run_id %></a> / 
          <a href="/mypage/edit/<%=r.run_id%>">edit</a>
        </li>
      <% end %>
    </ul>
  </li>
</ul>
<%= @text %>

