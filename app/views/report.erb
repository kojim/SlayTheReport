<%# デッキサマリ & プレイ情報 %>
<div class='report_summary'>
<div class='deck_summary'>
<h2>デッキサマリ</h2>

<div>
<%# 円グラフ %>

<%
  out_r = 80
  out_pr2 = 2 * out_r * Math::PI
  out_offset = out_pr2 * 0.25
  in_r = 53
  in_pr2 = 2 * in_r * Math::PI
  in_offset      = in_pr2 * 0.25
  power_len   = out_pr2 * @report.run.deck_stat['power_ratio']
  exhaust_len = out_pr2 * @report.run.deck_stat['exhaust_ratio']
  remain_len  = out_pr2 * (1.0 - @report.run.deck_stat['power_ratio'] - @report.run.deck_stat['exhaust_ratio'])
  draw_len = in_pr2 * [@report.run.deck_stat['total']['total_draw'].to_f/@report.run.deck_stat['total']['total_count'], 1].min
%>
<svg class='deck_balance_chart' viewBox='0 0 200 200'>
    <circle r='30' stroke-width='80' stroke='#eee'/>
  <% #外周 %>
  <circle
    r='<%=out_r%>'
    stroke='#ff4b00'
    stroke-width='74'
    stroke-dasharray='<%=power_len%> <%=exhaust_len + remain_len%>'
    stroke-dashoffset='<%=out_offset%>'
    />
  <circle
    r='<%=out_r%>'
    stroke='#4dc4ff'
    stroke-width='74'
    stroke-dasharray='0 <%=power_len%> <%=exhaust_len%> <%=remain_len%>'
    stroke-dashoffset='<%=out_offset%>'
    />
  <circle
    r='<%=out_r%>'
    stroke='#c9ace6'
    stroke-width='74'
    stroke-dasharray='0 <%=power_len + exhaust_len%> <%=remain_len%> 0'
    stroke-dashoffset='<%=out_offset%>'
    />
  <% #内周(ドロー率) %>
  <circle
    r='<%=in_r%>'
    stroke='gold'
    stroke-width='22'
    stroke-dasharray='<%=draw_len%> <%= in_pr2 - draw_len%>'
    stroke-dashoffset='<%=in_offset%>'
    />
  <text x='50%' y='50%' text-anchor='middle' dominant-baseline='central' font-size='32'><%=@report.run.master_deck.size%></text>
</svg>

<table class='deck_stat'>
  <thead>
    <tr>
      <th></th>
      <th colspan='4'>枚数</th>
      <th rowspan='2' class='draw_spec'><a href='https://github.com/kojim/SlayTheReport/blob/develop/app/cards.rb'>ドロー性能</a></th>
    </tr>
    <tr>
      <th></th>
      <th>計</th>
      <th>0ドロー</th>
      <th>1ドロー</th>
      <th>2～ドロー</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th class='power'><span>パワー</span></th>
      <td><%= @report.run.deck_stat['power']['total_count']%> (<%= (@report.run.deck_stat['power_ratio']*100).round(0)%>%)</td>
      <td><%= @report.run.deck_stat['power']['d0']%></td>
      <td><%= @report.run.deck_stat['power']['d1']%></td>
      <td><%= @report.run.deck_stat['power']['d2']%></td>
      <td>
        <%= @report.run.deck_stat['power']['total_draw']%>
        (<%=(@report.run.deck_stat['power']['total_draw'].to_f/@report.run.deck_stat['total']['total_count']*100).round(0)%>%)
      </td>
    </tr>
    <tr>
      <th class='exhaust'><span>消滅</span></th>
      <td><%= @report.run.deck_stat['exhaust']['total_count']%> (<%= (@report.run.deck_stat['exhaust_ratio']*100).round(0)%>%)</td>
      <td><%= @report.run.deck_stat['exhaust']['d0']%></td>
      <td><%= @report.run.deck_stat['exhaust']['d1']%></td>
      <td><%= @report.run.deck_stat['exhaust']['d2']%></td>
      <td>
        <%= @report.run.deck_stat['exhaust']['total_draw']%>
        (<%=(@report.run.deck_stat['exhaust']['total_draw'].to_f/@report.run.deck_stat['total']['total_count']*100).round(0)%>%)
      </td>
    </tr>
    <tr>
      <th class='remain'><span>残留</span></th>
      <td><%= @report.run.deck_stat['remain']['total_count']%> (<%= (@report.run.deck_stat['remain_ratio']*100).round(0)%>%)</td>
      <td><%= @report.run.deck_stat['remain']['d0']%></td>
      <td><%= @report.run.deck_stat['remain']['d1']%></td>
      <td><%= @report.run.deck_stat['remain']['d2']%></td>
      <td>
        <%= @report.run.deck_stat['remain']['total_draw']%>
        (<%=(@report.run.deck_stat['remain']['total_draw'].to_f/@report.run.deck_stat['total']['total_count']*100).round(0)%>%)
      </td>
    </tr>
    <tr>
      <th>計</th>
      <td><%= @report.run.deck_stat['total']['total_count']%></td>
      <td><%= @report.run.deck_stat['total']['d0']%></td>
      <td><%= @report.run.deck_stat['total']['d1']%></td>
      <td><%= @report.run.deck_stat['total']['d2']%></td>
      <td>
        <%= @report.run.deck_stat['total']['total_draw']%>
        (<%=(@report.run.deck_stat['total']['total_draw'].to_f/@report.run.deck_stat['total']['total_count']*100).round(0)%>%)
      </td>
    </tr>
  </tbody>
</table>
</div>
</div>

<div class='run_info'>
<h2>プレイ情報</h2>

<% if @is_edit_mode then %>
  <p>runid: <%= h(@report.run_id) %></p>
<% else %>
  <p>runid: <a href='<%= request.path_info%>?raw=true'><%= h(@report.run_id) %></a></p>
<% end %>
<p>seed: <%= h(@report.run.seed_text) %></p>
<p>AscensionLevel: <%= h(@report.run.ascension_level) %></p>
<p>localtime: <%= h(@report.run.localtime) %></p>
<p>mod: <%=
if @report.run.mods.empty? then
  '-'
else
  @report.run.mods.map{|e|
    case e
    when 'relic_stats'
      "<a href='https://steamcommunity.com/sharedfiles/filedetails/?id=2118491069'>Relic Stats</a>"
    when 'run_history_plus'
      "<a href='https://steamcommunity.com/sharedfiles/filedetails/?id=2802958032'>Run History Plus</a>"
    end
  }.join(' ')
end
%></p>
</div>


</div>


<h2>デッキ(<%=@report.run.master_deck.size%>) </h2>

<div class='master_deck <%= if @is_edit_mode then 'clickable' else '' end %>'>
<% @report.run.master_deck.each_with_index do |c,idx| %>
  <span>
  <%= img(c,80) %>
  <input type='checkbox' name='key_card_<%= idx %>' value='<%=c%>' style='display:none' <%= if @report.key_cards_pos.include? idx.to_s then 'checked="checked"' else '' end %>/>
  </span>
<% end %>
</div>

<h2>レリック(<%=@report.run.relics.size%>)</h2>

<div class='master_relic <%= if @is_edit_mode then 'clickable' else '' end %>'>
<% @report.run.relics.each_with_index do |c,idx| %>
  <span>
  <%= img(c,60) %>
  <input type='checkbox' name='key_relic_<%= idx %>' value="<%=c%>" style='display:none' <%= if @report.key_relics_pos.include? idx.to_s then 'checked="checked"' else '' end %>/>
  </span>
<% end %>
</div>


<h1>侵攻記録</h1>
<div class='report_body'>

<div class='content'>

<% @report.run.floors.each_with_index do |f,idx| %>
  <h2 class='floor align_center' data-id='<%= f.floor_id %>'> Floor <%= f.floor_id %>
    <div class='align_center'>
    <img src='<%= case f.floor_taken
        when 'R'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/rest.png'
        when '?'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/unknown.png'
        when 'M'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/monster.png'
        when 'E'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/elite.png'
        when 'T'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/chest.png'
        when '$'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/shop.png'
        when 'B'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/boss.png'
        else
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/empty.png'
        end %>'/>
    <% if f.floor_id < 50 and f.floor_type != nil and f.floor_type != f.floor_taken %> /
    <img src='<%= case f.floor_type
        when 'R'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/rest.png'
        when '?'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/unknown.png'
        when 'M'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/monster.png'
        when 'E'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/elite.png'
        when 'T'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/chest.png'
        when '$'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/shop.png'
        when 'B'
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/boss.png'
        else
          'https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/minimap/empty.png'
        end %>'/>
    <% end %>
    </div>
  </h2>
  <div class='f_container'>
    <div class='f_events'>
      <div class='f_event_left'>
        <div class='f_event_summary'>
          <div class='f_event_image'><%= img(f.image, 250) %></div>
        </div>
        <div class='f_use_potions'>
          <% f.use_potions.each do |c| %>
            <div>
            <%= img(c, 80) %>
            use
            </div>
          <% end %>
        </div>
      </div>
      <div class='f_player_action'>
        <div class='f_life_gold align_center'>
          <img src='https://slaythereport-images.s3.ap-northeast-1.amazonaws.com/misc/timer-svgrepo-com.svg' class='turn'/> <%= f.turn %> 
          <%= img('hp', 30) %> <%= f.hp %> / <%= f.max_hp %> (<%= sprintf("%+d", f.hp_diff) %>)
          <%= img('gold', 30) %> <%= f.gold %> (<%= sprintf("%+d", f.gold_diff) %>)
        </div>
        <div class='f_player_choise'>
          <% if f.player_choise != nil then %>
            行動選択: <%= f.player_choise %>
          <% end %>
        </div>
        <% f.obtain_chosen_cards.each do |c| %>
          <div class='f_chosen_cards bordered_cards'>
            <% if c['picked'] != 'SKIP' && c['picked'] != nil %>
              <div class='picked'>
                <%= img(c['picked'], 80) %>
                <p>picked</p>
              </div>
            <% end %>
            <% c['not_picked'].each do |np| %>
              <div class='pass'>
                <%= img(np, 80) %>
                <p>pass</p>
              </div>
            <% end %>
            </p>
          </div>
        <% end %>
        <div class='f_obtain_objects bordered_cards'>
          <% f.obtain_objects.each do |c| %>
            <div>
              <%= img(c, 80) %>
              <%=
                unless ['War Paint', 'Whetstone', 'Bottled Flame', 'Bottled Lightning', 'Bottled Tornado'].include?(c) then
                  @report.run.relic_stats[c]
                end
              %>
            get
            </div>
          <% end %>
        </div>
        <% f.upgrade_cards.each do |c| %>
          <div class='f_upgrade_cards bordered_cards'>
            <%= img(c, 80) %>
            ⇒
            <%= img(c+'+1', 80) %>
          </div>
        <% end %>
        <div class='f_remove_cards bordered_cards'>
          <% f.remove_cards.each do |c| %>
            <div class='removed'>
              <%= img(c, 80) %>
              <p> removed</p>
            </div>
          <% end %>
        </div>
        <div class='f_bottled_cards bordered_cards'>
          <% f.bottled_cards.each do |c| %>
            <div class='bottled'>
              <%= img(c, 80) %>
              <p> bottled</p>
            </div>
          <% end %>
        </div>
        <% unless f.shop_items.empty? then %>
        <div class='f_shop_items bordered_cards'>
          <div>
          <% f.shop_items['cards'].each do |c| %>
              <%= img(c, 40) %>
          <% end %>
          </div>
          <div>
          <% f.shop_items['relics'].each do |c| %>
              <%= img(c, 40) %>
          <% end %>
          <% f.shop_items['potions'].each do |c| %>
              <%= img(c, 40) %>
          <% end %>
          </div>
          <p>pass</p>
        </div>
        <% end %>
      </div>
    </div>
